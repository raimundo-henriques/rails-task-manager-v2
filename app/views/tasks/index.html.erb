<div class="container">
  <h1>My tasks</h1>
  <ul class="ps-1 py-3">
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        â€¢
        <%= link_to task_path(task), data: {method: :delete, confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <hr/>
  <div class="pt-3">
  <%= link_to "+ Add a new task", new_task_path %>
  </div>
</div>
