<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <div>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
    <%= f.submit %>
  <% end %>
  <div>
    <%= link_to "Back to task", task_path(@task) %>
    <%# <%= link_to "Back to list", tasks_path %>
  </div>
</div>
