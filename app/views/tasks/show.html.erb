<div class="container">
  <div>
    <h1><%= @task.title %></h1>
    <div>
      <p><%= link_to "Edit this task", edit_task_path(@task) %></p>
    </div>
  </div>
  <div>
    <p><%= @task.details %></p>
  </div>
  <p><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>
  <div>
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
