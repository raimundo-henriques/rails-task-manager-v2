<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @task.title %></h1>
    <div>
    <%= link_to(edit_task_path(@task)) do %>
      <button type="button" class="btn btn-light edit-button">
        <span><i class="fa-solid fa-pencil"></i> Edit this task</span>
      </button>
    <% end %>
    </div>
  </div>
  <div class="card p-4 bg-light mb-4 mt-3">
    <p class="m-0"><%= @task.details %></p>
  </div>
  <% if @task.completed %>
    <p class="pb-3"><i class="fa-regular fa-square-check"></i> This task is completed</p>
  <% else %>
    <p class="pb-3"><i class="fa-regular fa-square"></i> This task is not completed yet</p>
  <% end %>
  <hr/>
  <%= render "back_to_list" %>
</div>
